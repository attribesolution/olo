.hpanel
  .panel-body
    h2.font-light.m-b-xs 
      | Orders
    = form_tag(orders_path, :method => "get", id: "search-form", :class=>"form-inline") do
    	= text_field_tag :search, params[:search], :class => 'form-control', placeholder: "Enter Phone Number"
    	= submit_tag "Search", :name => nil, :class => 'btn btn-primary'	

- if @orders.any?  
  .row.projects
    - @orders.each do |order|
      = render "orders/item", order: order, fullScreen: false
- else
		b
			p There are no order against the phone number: #{params[:search]}