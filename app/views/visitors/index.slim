                / - binding.pry
                .row
                  .col-sm-6.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;") 
                    .project-label Food

                  .col-sm-3.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;") 
                    .project-label Quantity

                  .col-sm-3.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;") 
                    .project-label Total

                - order.order_details.each do |detail|
                  .row
                    .col-sm-6.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;")
                      = detail.menu.name

                    .col-sm-3.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;")
                      = "x" + detail.quantity.to_s

                    .col-sm-3.animated-panel.zoomIn style=("-webkit-animation-delay: 0.2s;")
                      = detail.menu.price * detail.quantity

                
              .col-sm-4.project-info.animated-panel.zoomIn style=("-webkit-animation-delay: 0.5s;") 
                .project-action.m-t-md
                  .btn-group
                    button.btn.btn-xs.btn-default Assign
                .project-value
                  h2.text-success
                    | AED 1206,40
                
